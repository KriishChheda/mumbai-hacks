model User {
  id             String         @id @default(cuid())
  email          String         @unique
  name           String?
  googleId       String         @unique
  moodScore      Float          @default(0.0)
  createdAt      DateTime       @default(now())

  transactions   Transaction[]
  goals          Goal[]
  groups         GroupMember[]
  createdGroups  Group[]
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Float
  type        String
  merchant    String?
  category    String?
  timestamp   DateTime @default(now())
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  target      Float
  progress    Float    @default(0.0)
  createdAt   DateTime @default(now())
}

model GroupGoal {
  id         String    @id @default(cuid())
  groupId    String
  title      String
  target     Float
  progress   Float     @default(0.0)
  createdAt  DateTime  @default(now())

  group      Group     @relation(fields: [groupId], references: [id])
}

model Group {
  id          String         @id @default(cuid())
  name        String
  groupCode   String         @unique
  createdById String
  createdBy   User           @relation(fields: [createdById], references: [id])
  createdAt   DateTime       @default(now())

  members     GroupMember[]
  goals       GroupGoal[]    
}

model GroupMember {
  id        String @id @default(cuid())
  groupId   String
  userId    String

  group     Group @relation(fields: [groupId], references: [id])
  user      User  @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}